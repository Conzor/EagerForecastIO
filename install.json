{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "element": {
        "description": "Where do you want the forecast to appear?",
        "title": "Forecast location",
        "order": 0,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "address": {
        "default": "",
        "description": "What's the address for the weather forecast?",
        "order": 1,
        "placeholder": "One Broadway Cambridge, MA 02142",
        "title": "Forecast Address",
        "type": "string"
      },
      "colors": {
        "title": "Colors",
        "order": 2,
        "type": "object",
        "properties": {
          "tempColor": {
            "default": "#000000",
            "format": "color",
            "order": 0,
            "title": "Temperature bars",
            "type": "string"
          },
          "enableBackgroundColor": {
            "order": 1,
            "title": "Use background color",
            "type": "boolean"
          },
          "backgroundColor": {
            "showIf": {"colors.enableBackgroundColor": true},
            "default": "#ffffff",
            "format": "color",
            "order": 2,
            "title": "Background",
            "type": "string"
          }
        }
      },
      "units": {
        "default": "us",
        "description": "What units should be used for temperature and wind speed?",
        "order": 3,
        "title": "Units",
        "type": "string",
        "enum": [
          "us",
          "uk",
          "si",
          "ca"
        ],
        "enumNames": {
          "us": "Fahrenheit and mph",
          "uk": "Celsius and mph",
          "si": "Celsius and m/s",
          "ca": "Celsius and km/h"
        }
      }
    }
  }
}

